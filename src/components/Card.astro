---
export interface CardProps {
  title: string
  description?: string
  href: string
  transitionName?: string
  tags?: string[]
}
const { title, description, href, transitionName, tags } = Astro.props as CardProps
---
<a href={href} class="block glass rounded-xl p-5 card-hover reveal interactive hover:bg-white/10 active:bg-white/15" data-tags={(tags ?? []).join(',')}>
  <h3 class="text-base font-semibold">{title}</h3>
  {description && <p class="mt-1 text-sm text-fg-muted">{description}</p>}
  {tags && tags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-1.5">
      {tags.map((t) => (
        <span class="px-2 py-0.5 text-[11px] rounded border border-white/10 text-fg-muted">{t}</span>
      ))}
    </div>
  )}
</a>
